<h1>Login</h1>

<form action="/login" method="post">
    <ul type="errors">
        <% errors.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    
    <label>
        Name
        <input type="text" name="name" value="">
    </label>

    <label>
        Password
        <input type="password" name="password">
    </label>
    
    <input type="hidden" name="csrf" value="<%= csrf %>">
    <input type="submit" value="Login">
</form>
