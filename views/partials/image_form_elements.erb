<label for="title">Title</label>
<input type="text" name="title" value="<%= image["title"] %>">

<label>Tags</label>
<ul id="tags">
    <% Array(image["tags"]).each do |tag| %>
        <li>
            <label>
                <input type="checkbox" name="tag[]" value="<%= tag %>" checked>
                <%= tag %>
            </label>
        </li>
    <% end %>

    <li>
        <label>
            <input type="checkbox" checked>
            <input type="text" name="tag[]">
        </label>
    </li>
</ul>
